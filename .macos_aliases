################################
##  Mac-specific CLI aliases  ##
################################

## Aliases to Open Applications
alias arduino="open -a Arduino"
alias atom="open -a Atom\ Beta"
alias firefox="open -a Firefox"

## Other Application Aliases
alias which='type -all' # find executables not in bin path
alias path='echo -e ${PATH//:/\\n}' # give path to executables not in bin path

## Script Aliases
alias gitbookcomp="/Users/charles/Cloud/Code/MyCode/Scripts/diss-scripts/gitbook_compile_pandoc.sh"

## Aliases to Directories
alias diss='cd /Users/charles/Cloud/Writing/Gitbooks/cberret/diss; ls'
alias archive='cd /Users/charles/Cloud/Books/Research_Resources/; ls'
alias benjamin='cd /Users/charles/Cloud/Writing/Essays/Active/Benjamin_on_Printing/revise_resubmit; ls;'
alias cv='cd /Users/charles/Cloud/Academic/CV/; ls'
alias scripts='cd ~/Cloud/Code/MyCode/Scripts/; ls'
alias dscripts='cd ~/Cloud/Code/MyCode/Scripts/diss-scripts; ls'
alias code='cd ~/Cloud/Code/; ls'

## Enable single-window mode
alias single="defaults write com.apple.dock single-app -bool true;
killall Dock"

## Go back to multiple window mode
alias multiple="defaults write com.apple.dock single-app -bool
false; killall Dock"

## kill the goddamn windowserver
alias killwindow="sudo killall -HUP WindowServer"
